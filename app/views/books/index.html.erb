<h1>Books</h1>

<%= link_to "Add new book", new_book_path %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Pages</th>
      <th scope="col">ISBN</th>
      <th scope="col">PDF available?</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each_with_index do |book| %>
      <tr>
        <th scope="row"><%= book.id %></th>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.pages %></td>
        <td><%= book.isbn %></td>
        <td>
          <% if book.pdf_file.present? %>
            <%= link_to "Read PDF", book.pdf_file if book.pdf_file.present? %>
          <% else %>
            <span>Not available</span>
          <% end %>
        </td>
        <td>
          <%= link_to "Show", book_path(book.id), class: "btn btn-warning" %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book.id), class: "btn btn-primary" %>
        </td>
        <td>
          <%= button_to "Delete", book_path(book.id), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to remove this book?" } %> 
        </td>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
