<%= form_with url: form_path, method: form_method, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, value: student.name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :year_of_study, class: "form-label" %>
    <%= f.text_area :year_of_study, value: student.year_of_study, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.text_field :email, value: student.email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :phone_number, class: "form-label" %>
    <%= f.text_field :phone_number, value: student.phone_number, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :branch, class: "form-label" %>
    <%= f.text_field :branch, value: student.branch, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Register a new student", class: "btn btn-warning" %>
  </div>
<% end %>

