<%= form_with url: form_path, method: form_method, local: true, html: { class: "p-4 border rounded bg-light shadow-sm" } do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label fw-bold" %>
    <%= f.text_field :name, value: student.name, class: "form-control", placeholder: "Enter full name" %>
  </div>

  <div class="mb-3">
    <%= f.label :year_of_study, "Year of Study", class: "form-label fw-bold" %>
    <%= f.number_field :year_of_study, value: student.year_of_study, class: "form-control", placeholder: "e.g. 1, 2, 3..." %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label fw-bold" %>
    <%= f.email_field :email, value: student.email, class: "form-control", placeholder: "example@student.com" %>
  </div>

  <div class="mb-3">
    <%= f.label :phone_number, class: "form-label fw-bold" %>
    <%= f.telephone_field :phone_number, value: student.phone_number, class: "form-control", placeholder: "10-digit phone number" %>
  </div>

  <div class="mb-3">
    <%= f.label :branch, class: "form-label fw-bold" %>
    <%= f.text_field :branch, value: student.branch, class: "form-control", placeholder: "e.g. Computer Science" %>
  </div>

  <div class="text-end">
    <%= f.submit "Register Student", class: "btn btn-success px-4" %>
  </div>
<% end %>

