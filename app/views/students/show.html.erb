<h1 class="mb-4 text-center text-primary">🎓 Student Details</h1>

<div class="card shadow mx-auto" style="max-width: 24rem;">
  <div class="card-body">
    <h5 class="card-title">
      <strong>Name:</strong> <i><%= @student.name %></i>
    </h5>
    <p class="card-text">
      <strong>Branch:</strong> <%= @student.branch %><br>
      <strong>Year:</strong> <%= @student.year_of_study %>
    </p>
  </div>

  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <strong>Email:</strong> <%= @student.email %>
    </li>
    <li class="list-group-item">
      <strong>Phone Number:</strong> <%= @student.phone_number %>
    </li>
  </ul>

  <div class="card-body text-center">
    <%= link_to "← Back to Students", students_path, class: "btn btn-secondary" %>
  </div>
</div>

